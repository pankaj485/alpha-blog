  <div class="text-center mt-4">
    <%= link_to "Edit Your Profie", edit_user_path(@user), class: "btn btn-outline-info"  %>
  </div>
<% end  %>
<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>

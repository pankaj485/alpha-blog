<h1>Edit Article</h1>
<%= render  "error"  %>
<%= form_with(model: @article, local:true)  do |f|  %>
  <p>
    <%= f.label :title, "title"  %>
    <br>
    <%= f.text_field :title  %>
  </p>
  <p>
    <%= f.label :description, "description"  %>
    <br>
    <%= f.text_area :description  %>
  </p>
  <p>
    <%= f.submit  %>
  </p>
<% end  %>
<%= link_to "Cancel and Return to articles list", articles_path  %>
